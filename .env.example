DEMO_MODE=1 # Enable demo mode: uses mocks for external services, enforces rate limits (default: on)
RATE_LIMIT_PER_IP=30 # Max requests per IP per day (default)
RATE_LIMIT_WINDOW=1d # Time window for IP limit (default: 1 day)
RATE_LIMIT_PER_MINUTE=1 # Max requests per minute (default)
MOCK_LIGHTHOUSE=1 # Use mock Lighthouse results (default: on in demo/CI, for no Chrome deps)
API_BASE= # Optional: base URL for private API (if absent, skips private features with mocks)