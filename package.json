{
  "name": "next-speed-kit",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "next-speed-kit": "dist/cli/index.js"
  },
  "packageManager": "pnpm@9",
  "description": "CLI for auditing and auto-fixing Next.js performance issues. Supports 4 codemods for 90+ Lighthouse scores.",
  "keywords": [
    "nextjs",
    "performance",
    "lighthouse",
    "codemod",
    "cli",
    "typescript"
  ],
  "repository": "https://github.com/salman-uq2024/next-speed-kit",
  "bugs": "https://github.com/salman-uq2024/next-speed-kit/issues",
  "homepage": "https://github.com/salman-uq2024/next-speed-kit",
  "author": "Salman",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "pnpm run build",
    "build": "tsc",
    "prepublishOnly": "pnpm build",
    "dev": "tsx watch src/cli/index.ts",
    "test": "vitest",
    "package": "pnpm run package:cli",
    "package:cli": "TZ=UTC scripts/package.sh",
    "example:audit": "tsx src/scripts/run-example-audit.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chrome-launcher": "^1.1.0",
    "commander": "^12.1.0",
    "execa": "^9.4.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "jscodeshift": "^0.15.1",
    "lighthouse": "^12.2.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jscodeshift": "^0.11.11",
    "@types/node": "^22.5.4",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  }
}
